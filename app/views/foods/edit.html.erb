<div class="container">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4 text-center">
      <h3 class="form-heading"> 게시글 수정하기</h3>

      <form action="/foods/write_complete" method="post">
        <input type="hidden" name="id" value="<%= @post.id %>">
        <p>+ 분류
        <select name="post_category">
          <option value="민평표">민평표</option>
          <option value="단가표">단가표</option>
          <option value="국고발행계획">국고발행계획</option>
          <option value="채권뉴스">채권뉴스</option>
        </select></p>
        <p><input class="form-input" type="text" name="post_title" value="<%= @post.title %>"></p>
        <p><textarea class="form-textarea" name="post_content"><%= @post.content %></textarea></p>
        <input class="btn btn-lg btn-block" type="submit" value="수정하기">
      </form>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
